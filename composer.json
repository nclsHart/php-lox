{
    "name": "nclshart/php-lox",
    "description": "Lox interpreter written in PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Hart",
            "email": "contact@nclshart.net"
        }
    ],
    "require": {
        "php": "^8.3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "nette/php-generator": "^4.1",
        "phpunit/php-file-iterator": "^6.0",
        "phpunit/phpunit": "^12.0",
        "psalm/plugin-phpunit": "^0.19.2",
        "symfony/process": "^7.2",
        "vimeo/psalm": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "Lox\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lox\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
